generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  username     String?  @unique
  passwordHash String
  createdAt    DateTime @default(now())
  sessions     Session[]
  jobs         Job[]
}

model Session {
  id        String   @id @default(cuid())
  tokenHash String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Job {
  id        String   @id @default(cuid())
  title     String
  company   String
  status    JobStatus @default(APPLIED)
  notes     String?
  companyLink String?
  vacancyLink String?
  salary      String?
  location    String?
  contact     String?
  nextStep    String?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum JobStatus {
  APPLIED
  INTERVIEW
  OFFER
  REJECTED
}
